# ===========================================
# 基本設定
# ===========================================
set tabsize 4
set linenumbers

# ===========================================
# キーバインド設定
# ===========================================
# ヘルプを Ctrl+H に変更
bind ^H help all
unbind ^G all

# ===========================================
# カラー設定 (ダークテーマ向け)
# ===========================================
# タイトルバー (上部)
set titlecolor bold,white,blue

# ステータスバー (下部)
set statuscolor bold,white,green

# キーバインドヒント
set keycolor cyan

# 関数説明
set functioncolor yellow

# 行番号
set numbercolor cyan

# プロンプトバー (ようこそメッセージなど)
set promptcolor bold,yellow

# エラーメッセージ
set errorcolor bold,white,red

# 選択テキスト
set selectedcolor bold,white,magenta

# 検索結果ハイライト
set stripecolor ,yellow
